---
// props でタイトルを受け取れるようにしておく
const { title } = Astro.props
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a> | <a href="/blog">Blog</a>
      </nav>
    </header>
    <main>
      <slot />   <!-- ここに各ページの内容が入る -->
    </main>
    <footer>
      <p>&copy; 2025 HYKW名前</p>
    </footer>
  </body>
</html>
